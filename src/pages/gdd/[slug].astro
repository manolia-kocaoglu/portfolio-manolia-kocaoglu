---
import ProjectLayout from '../../layouts/ProjectLayout.astro';
import Header from '../../components/Header.astro';
import pb from '../../utils/pb';

export const prerender = false;

const { slug } = Astro.params;

let gdd;
try {
  gdd = await pb.collection('gdd').getOne(slug || '');
  console.log('‚úÖ GDD r√©cup√©r√©:', gdd.titre);
} catch (error) {
  console.error('‚ùå Erreur:', error);
  return Astro.redirect('/portfolio');
}

const imageUrl = gdd.image ? pb.files.getURL(gdd, gdd.image) : null;
const illustrationUrl = gdd.illustration ? pb.files.getURL(gdd, gdd.illustration) : null;

const description = (gdd.description ?? '').split('\n');
const univers = (gdd.univers_lore ?? '').split('\n');
const gameplay = (gdd.gameplay_systeme ?? '').split('\n');
const credits = (gdd.credits ?? '').split('\n');
---

<ProjectLayout title={`${gdd.titre} - Manolia Kocaoglu`}>
  <Header currentPage="portfolio" />
  
  <div class="grid-bg"></div>
  
  <div class="pixel-decorations">
    <div class="pixel-shape" style="top: 10%; left: 5%;"></div>
    <div class="pixel-shape" style="top: 20%; right: 12%;"></div>
    <div class="pixel-cross" style="top: 15%; right: 20%;"></div>
    <div class="pixel-plus" style="bottom: 40%; left: 5%;"></div>
  </div>

  <div class="project-container">
    <div class="nav-dots">
      <button class="dot active" data-section="0"></button>
      <button class="dot" data-section="1"></button>
      <button class="dot" data-section="2"></button>
      <button class="dot" data-section="3"></button>
    </div>

    <div class="sections-wrapper">
      <!-- Section 1: Pr√©sentation -->
      <section class="section active" data-index="0">
        <div class="section-content">
          <div class="hero-content">
            {imageUrl && (
              <div class="game-logo">
                <img src={imageUrl} alt={gdd.titre} />
              </div>
            )}
            
            <h1 class="game-title">{gdd.titre}</h1>
            {gdd.sous_titre && <p class="game-subtitle">{gdd.sous_titre}</p>}
            
            <div class="game-description">
              {description.map((p: string) => p && <p>{p}</p>)}
            </div>

            {illustrationUrl && (
              <div class="illustration-preview">
                <img src={illustrationUrl} alt="Illustration" />
              </div>
            )}
          </div>
        </div>
        <button class="scroll-indicator" data-next="1">‚Üì</button>
      </section>

      <!-- Section 2: Univers & Lore -->
      <section class="section" data-index="1">
        <div class="section-content">
          <div class="content-section">
            <h2>üåô UNIVERS & LORE</h2>
            <div class="section-text">
              {univers.map((p: string) => p && <p>{p}</p>)}
            </div>
          </div>
        </div>
        <button class="scroll-indicator" data-next="2">‚Üì</button>
      </section>

      <!-- Section 3: Gameplay & Syst√®me -->
      <section class="section" data-index="2">
        <div class="section-content">
          <div class="content-section">
            <h2>üéÆ GAMEPLAY & SYST√àME</h2>
            <div class="section-text">
              {gameplay.map((p: string) => p && <p>{p}</p>)}
            </div>
          </div>
        </div>
        <button class="scroll-indicator" data-next="3">‚Üì</button>
      </section>

      <!-- Section 4: Cr√©dits -->
      <section class="section" data-index="3">
        <div class="section-content">
          <div class="content-section">
            <h2>‚ú® CR√âDITS</h2>
            <div class="section-text">
              {credits.map((p: string) => p && <p>{p}</p>)}
            </div>
            
            <div class="credits-footer">
              <div class="manolia-avatar">
                <img src="/manolia.svg" alt="Manolia" />
              </div>
              <a href="/portfolio" class="cta-button">
                <span>RETOUR AU PORTFOLIO</span>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path d="M5 12h14M12 5l7 7-7 7" stroke-width="2" stroke-linecap="round" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</ProjectLayout>

<style>
  /* Styles sp√©cifiques √† la page GDD */
  .hero-content {
    text-align: center;
  }

  .game-logo {
    width: 150px;
    height: 150px;
    margin: 0 auto 25px;
    border-radius: 50%;
    overflow: hidden;
    border: 4px solid #ffffff;
    box-shadow: 0 0 0 4px #111b9f, 6px 6px 0 4px rgba(0,0,0,0.4);
  }

  .game-logo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .game-title {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    color: #ffffff;
    margin-bottom: 12px;
    text-shadow: 4px 4px 0 rgba(0,0,0,0.3);
    letter-spacing: 0.1em;
  }

  .game-subtitle {
    font-size: 0.9rem;
    color: #dcdcff;
    margin-bottom: 20px;
    letter-spacing: 0.05em;
  }

  .game-description {
    font-size: 0.8rem;
    line-height: 1.7;
    color: #f5f5ff;
    margin-bottom: 25px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .game-description p {
    margin-bottom: 10px;
  }

  .illustration-preview {
    max-width: 500px;
    margin: 0 auto;
    border: 4px solid #ffffff;
    box-shadow: 6px 6px 0 0 rgba(0,0,0,0.4);
    overflow: hidden;
  }

  .illustration-preview img {
    width: 100%;
    height: auto;
    display: block;
  }

  .content-section {
    text-align: center;
  }

  @media (max-width: 768px) {
    .game-logo {
      width: 120px;
      height: 120px;
    }
  }
</style>

<script>
  let currentSection = 0;
  const sections = document.querySelectorAll('.section');
  const dots = document.querySelectorAll('.dot');

  function goToSection(index: number) {
    if (index < 0 || index >= sections.length) return;
    
    sections[currentSection].classList.remove('active');
    dots[currentSection].classList.remove('active');
    
    currentSection = index;
    
    sections[currentSection].classList.add('active');
    dots[currentSection].classList.add('active');
  }

  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowDown' || e.key === 'ArrowRight') {
      goToSection(currentSection + 1);
    } else if (e.key === 'ArrowUp' || e.key === 'ArrowLeft') {
      goToSection(currentSection - 1);
    }
  });

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      goToSection(index);
    });
  });

  document.querySelectorAll('.scroll-indicator').forEach((indicator) => {
    indicator.addEventListener('click', () => {
      const nextIndex = parseInt(indicator.getAttribute('data-next') || '0');
      goToSection(nextIndex);
    });
  });

  let isScrolling = false;
  let scrollTimeout: number;
  
  document.addEventListener('wheel', (e) => {
    if (isScrolling) return;
    e.preventDefault();
    
    if (Math.abs(e.deltaY) > 10) {
      isScrolling = true;
      
      if (e.deltaY > 0) {
        goToSection(currentSection + 1);
      } else {
        goToSection(currentSection - 1);
      }
      
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(() => {
        isScrolling = false;
      }, 1000);
    }
  }, { passive: false });

  let touchStartY = 0;
  document.addEventListener('touchstart', (e) => {
    touchStartY = e.touches[0].clientY;
  });

  document.addEventListener('touchend', (e) => {
    const touchEndY = e.changedTouches[0].clientY;
    const diff = touchStartY - touchEndY;
    
    if (Math.abs(diff) > 50) {
      if (diff > 0) {
        goToSection(currentSection + 1);
      } else {
        goToSection(currentSection - 1);
      }
    }
  });
</script>