<style>
  .grid-bg {
    position: fixed;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255,255,255,0.06) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.06) 1px, transparent 1px);
    background-size: 60px 60px;
    opacity: 0.7;
    z-index: 0;
  }

  .pixel-decorations {
    position: fixed;
    inset: 0;
    z-index: 1;
    pointer-events: none;
  }

  .pixel-shape,
  .pixel-cross,
  .pixel-plus {
    position: absolute;
    width: 18px;
    height: 18px;
    background: rgba(255, 255, 255, 0.15);
    animation: float 3s ease-in-out infinite;
  }

  .pixel-cross {
    background:
      linear-gradient(rgba(255,255,255,0.25) 5px, transparent 5px, transparent 11px, rgba(255,255,255,0.25) 11px),
      linear-gradient(90deg, rgba(255,255,255,0.25) 5px, transparent 5px, transparent 11px, rgba(255,255,255,0.25) 11px);
  }

  .pixel-plus {
    clip-path: polygon(40% 0%, 60% 0%, 60% 40%, 100% 40%, 100% 60%, 60% 60%, 60% 100%, 40% 100%, 40% 60%, 0% 60%, 0% 40%, 40% 40%);
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); opacity: 0.7; }
    50% { transform: translateY(-10px); opacity: 1; }
  }

  .project-container {
    width: 100vw;
    height: 100vh;
    position: relative;
    overflow: hidden;
  }

  .nav-dots {
    position: fixed;
    top: 50%;
    right: 40px;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 16px;
    z-index: 100;
  }

  .dot {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: rgba(255,255,255,0.3);
    border: 2px solid #ffffff;
    cursor: pointer;
    transition: all 0.3s;
    padding: 0;
  }

  .dot.active {
    background: #ffffff;
    transform: scale(1.4);
  }

  .dot:hover {
    background: rgba(255,255,255,0.6);
    transform: scale(1.2);
  }

  .sections-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .section {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 140px 40px 100px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease, visibility 0.6s;
  }

  .section.active {
    opacity: 1;
    visibility: visible;
    z-index: 2;
  }

  .section-content {
    max-width: 1000px;
    width: 100%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    background: transparent;
    border: none;
    color: #ffffff;
    font-size: 2.5rem;
    cursor: pointer;
    animation: bounce 2s ease-in-out infinite;
    z-index: 10;
    padding: 0;
    line-height: 1;
  }

  .scroll-indicator:hover {
    color: #ffd700;
  }

  @keyframes bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(10px); }
  }

  h2 {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(1.2rem, 2.5vw, 1.8rem);
    color: #ffffff;
    margin-bottom: 40px;
    text-shadow: 3px 3px 0 rgba(0,0,0,0.3);
    letter-spacing: 0.08em;
    text-align: center;
  }

  .hero-content {
    text-align: center;
  }

  .game-logo {
    width: 130px;
    height: 130px;
    margin: 0 auto 25px;
    border-radius: 50%;
    overflow: hidden;
    border: 4px solid #ffffff;
    box-shadow: 0 0 0 4px #111b9f, 6px 6px 0 4px rgba(0,0,0,0.4);
    background: #ffffff;
  }

  .game-logo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .game-title {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    color: #ffffff;
    margin-bottom: 12px;
    text-shadow: 4px 4px 0 rgba(0,0,0,0.3);
    letter-spacing: 0.1em;
    line-height: 1.4;
  }

  .game-subtitle {
    font-size: 0.9rem;
    color: #dcdcff;
    margin-bottom: 25px;
    letter-spacing: 0.05em;
  }

  .game-description {
    font-size: 0.8rem;
    line-height: 1.6;
    color: #f5f5ff;
    margin-bottom: 25px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    text-align: left;
  }

  .game-description p {
    margin-bottom: 12px;
  }

  .illustration-preview {
    max-width: 500px;
    margin: 0 auto;
    border: 4px solid #ffffff;
    box-shadow: 6px 6px 0 0 rgba(0,0,0,0.4);
    overflow: hidden;
    background: #05060f;
  }

  .illustration-preview img {
    width: 100%;
    height: auto;
    display: block;
  }

  .content-section {
    text-align: center;
  }

  .section-text {
    max-width: 600px;
    margin: 0 auto;
    font-size: 0.8rem;
    line-height: 1.6;
    color: #f5f5ff;
    text-align: left;
  }

  .section-text p {
    margin-bottom: 12px;
  }

  .no-content {
    font-size: 0.9rem;
    color: #dcdcff;
    font-style: italic;
    text-align: center;
    padding: 20px;
  }

  .credits-footer {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 30px;
    margin-top: 40px;
    flex-wrap: wrap;
  }

  .manolia-avatar {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    overflow: hidden;
    background: #ffffff;
    border: 4px solid #ffffff;
    box-shadow: 4px 4px 0 0 rgba(0,0,0,0.3);
  }

  .manolia-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.4);
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 12px 20px;
    background: #ffffff;
    color: #141a7b;
    border: 3px solid #ffffff;
    font-family: 'Press Start 2P', monospace;
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    text-decoration: none;
    cursor: pointer;
    box-shadow: 5px 5px 0 0 rgba(0,0,0,0.3);
    transition: all 0.2s;
  }

  .cta-button:hover {
    transform: translate(-2px, -2px);
    box-shadow: 7px 7px 0 0 rgba(0,0,0,0.4);
    background: #ffd700;
  }

  @media (max-width: 768px) {
    .nav-dots {
      right: 20px;
    }

    .section {
      padding: 120px 20px 80px;
    }

    .game-logo {
      width: 100px;
      height: 100px;
    }

    .game-title {
      font-size: 1.2rem;
    }

    .illustration-preview {
      max-width: 100%;
    }

    .credits-footer {
      flex-direction: column;
      gap: 20px;
    }
  }
</style>

<script>
  let currentSection = 0;
  const sections = document.querySelectorAll('.section');
  const dots = document.querySelectorAll('.dot');

  function goToSection(index: number) {
    if (index < 0 || index >= sections.length) return;
    
    sections[currentSection].classList.remove('active');
    dots[currentSection].classList.remove('active');
    
    currentSection = index;
    
    sections[currentSection].classList.add('active');
    dots[currentSection].classList.add('active');
  }

  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowDown' || e.key === 'ArrowRight') {
      goToSection(currentSection + 1);
    } else if (e.key === 'ArrowUp' || e.key === 'ArrowLeft') {
      goToSection(currentSection - 1);
    }
  });

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      goToSection(index);
    });
  });

  document.querySelectorAll('.scroll-indicator').forEach((indicator) => {
    indicator.addEventListener('click', () => {
      const nextIndex = parseInt(indicator.getAttribute('data-next') || '0');
      goToSection(nextIndex);
    });
  });

  let isScrolling = false;
  let scrollTimeout: number;
  
  document.addEventListener('wheel', (e) => {
    if (isScrolling) return;
    e.preventDefault();
    
    if (Math.abs(e.deltaY) > 10) {
      isScrolling = true;
      
      if (e.deltaY > 0) {
        goToSection(currentSection + 1);
      } else {
        goToSection(currentSection - 1);
      }
      
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(() => {
        isScrolling = false;
      }, 1000);
    }
  }, { passive: false });

  let touchStartY = 0;
  document.addEventListener('touchstart', (e) => {
    touchStartY = e.touches[0].clientY;
  });

  document.addEventListener('touchend', (e) => {
    const touchEndY = e.changedTouches[0].clientY;
    const diff = touchStartY - touchEndY;
    
    if (Math.abs(diff) > 50) {
      if (diff > 0) {
        goToSection(currentSection + 1);
      } else {
        goToSection(currentSection - 1);
      }
    }
  });
</script>