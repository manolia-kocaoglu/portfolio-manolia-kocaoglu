---
import ProjectLayout from '../../layouts/ProjectLayout.astro';
import Header from '../../components/Header.astro';
import pb from '../../utils/pb';

export const prerender = false;

const { slug } = Astro.params;

let gdd;
try {
  gdd = await pb.collection('gdd').getOne(slug || '');
} catch (error) {
  console.error('âŒ Erreur:', error);
  return Astro.redirect('/portfolio');
}

const imageUrl = gdd.image ? pb.files.getURL(gdd, gdd.image) : null;
const illustrationUrl = gdd.illustration ? pb.files.getURL(gdd, gdd.illustration) : null;

const description = (gdd.description ?? '').split('\n').filter(p => p.trim());
const univers = (gdd.univers_lore ?? '').split('\n').filter(p => p.trim());
const gameplay = (gdd.gameplay_systeme ?? '').split('\n').filter(p => p.trim());
const credits = (gdd.credits ?? '').split('\n').filter(p => p.trim());
