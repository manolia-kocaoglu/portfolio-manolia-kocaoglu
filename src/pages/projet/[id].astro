---
import ProjectLayout from '../../layouts/ProjectLayout.astro';
import PocketBase from 'pocketbase';

export async function getStaticPaths() {
  const pb = new PocketBase('http://127.0.0.1:8090');
  const projets = await pb.collection('projets').getFullList();
  
  return projets.map((projet) => ({
    params: { id: projet.id },
    props: { projet },
  }));
}

const { projet } = Astro.props;
const pb = new PocketBase('http://127.0.0.1:8090');

const imageUrl = projet.image ? pb.getFileUrl(projet, projet.image) : null;
const description = (projet.description ?? '').split('\n');
const couleurs = (projet.couleurs ?? '').split('\n');
const typographie = (projet.typographie ?? '').split('\n');
const credits = (projet.credits ?? '').split('\n');
---

<ProjectLayout title={`${projet.titre} - Manolia Kocaoglu`}>
  <div class="project-container">
    <!-- Navigation -->
    <nav class="project-nav">
      <a href="/portfolio" class="back-link">← Portfolio</a>
      <div class="nav-dots">
        <button class="dot active" data-section="0"></button>
        <button class="dot" data-section="1"></button>
        <button class="dot" data-section="2"></button>
        <button class="dot" data-section="3"></button>
      </div>
      <a href="/" class="home-link">⌂</a>
    </nav>

    <!-- Sections fullscreen -->
    <div class="sections-wrapper">
      <!-- Section 1: Présentation -->
      <section class="section active" data-index="0">
        <div class="section-content">
          <div class="project-hero">
            <h1 class="project-title">{projet.titre}</h1>
            <p class="project-subtitle">Plateforme de tatouage par IA</p>
            
            <div class="project-visual">
              {imageUrl ? (
                <img src={imageUrl} alt={projet.titre} />
              ) : (
                <div class="visual-fallback">
                  <span>Mockup à venir</span>
                </div>
              )}
            </div>
            
            <div class="project-description">
              {description.map((p: string) => p && <p>{p}</p>)}
            </div>
          </div>
        </div>
        <button class="scroll-indicator" data-next="1">↓</button>
      </section>

      <!-- Section 2: Couleurs -->
      <section class="section" data-index="1">
        <div class="section-content">
          <div class="colors-section">
            <h2>HARMONIE COLORÉE</h2>
            
            <div class="color-showcase">
              <div class="color-box" style="background: #111111;"></div>
              <div class="color-box" style="background: #333333;"></div>
              <div class="color-box" style="background: #777777;"></div>
              <div class="color-box" style="background: #f5f5f5;"></div>
            </div>
            
            <div class="section-text">
              {couleurs.map((p: string) => p && <p>{p}</p>)}
            </div>
          </div>
        </div>
        <button class="scroll-indicator" data-next="2">↓</button>
      </section>

      <!-- Section 3: Typographie -->
      <section class="section" data-index="2">
        <div class="section-content">
          <div class="typo-section">
            <h2>TYPOGRAPHIE</h2>
            
            <div class="typo-showcase">
              <div class="font-display">
                <span class="font-label">Montserrat Alternates</span>
                <div class="font-variants">
                  <span class="bold-text">Bold</span>
                  <span class="medium-text">Medium</span>
                </div>
              </div>
              
              <div class="font-display nosifer">
                <span class="font-label-large">NOSIFER</span>
              </div>
            </div>
            
            <div class="section-text">
              {typographie.map((p: string) => p && <p>{p}</p>)}
            </div>
          </div>
        </div>
        <button class="scroll-indicator" data-next="3">↓</button>
      </section>

      <!-- Section 4: Crédits -->
      <section class="section" data-index="3">
        <div class="section-content">
          <div class="credits-section">
            <h2>CRÉDITS</h2>
            
            <div class="section-text">
              {credits.map((p: string) => p && <p>{p}</p>)}
            </div>
            
            <div class="credits-footer">
              <div class="manolia-avatar">
                <img src="/manolia.svg" alt="Manolia" />
              </div>
              <a href={projet.lien || '#'} target="_blank" class="cta-button">
                <span>VOIR LE PROJET</span>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path d="M5 12h14M12 5l7 7-7 7" stroke-width="2" stroke-linecap="round" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</ProjectLayout>

<style>
  .project-container {
    width: 100vw;
    height: 100vh;
    position: relative;
    overflow: hidden;
  }

  .project-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30px 40px;
    background: linear-gradient(to bottom, rgba(5, 8, 47, 0.9) 0%, transparent 100%);
  }

  .back-link,
  .home-link {
    color: #ffffff;
    text-decoration: none;
    font-family: 'Press Start 2P', monospace;
    font-size: 0.8rem;
    padding: 10px 18px;
    border: 3px solid #fff;
    background: rgba(0,0,0,0.3);
    box-shadow: 3px 3px 0 0 rgba(0,0,0,0.4);
    transition: all 0.2s;
  }

  .back-link:hover,
  .home-link:hover {
    background: #ffffff;
    color: #141a7b;
    transform: translate(-2px, -2px);
    box-shadow: 5px 5px 0 0 rgba(0,0,0,0.4);
  }

  .home-link {
    font-size: 1.5rem;
    padding: 8px 16px;
  }

  .nav-dots {
    display: flex;
    gap: 12px;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255,255,255,0.3);
    border: 2px solid #ffffff;
    cursor: pointer;
    transition: all 0.3s;
    padding: 0;
  }

  .dot.active {
    background: #ffffff;
    transform: scale(1.3);
  }

  .dot:hover {
    background: rgba(255,255,255,0.6);
  }

  .sections-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .section {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 120px 60px 80px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease, visibility 0.6s;
  }

  .section.active {
    opacity: 1;
    visibility: visible;
    z-index: 2;
  }

  .section-content {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
  }

  .project-hero {
    text-align: center;
  }

  .project-title {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(2rem, 5vw, 4rem);
    color: #ffffff;
    margin-bottom: 16px;
    text-shadow: 4px 4px 0 rgba(0,0,0,0.3);
    letter-spacing: 0.1em;
  }

  .project-subtitle {
    font-size: 1rem;
    color: #dcdcff;
    margin-bottom: 40px;
  }

  .project-visual {
    max-width: 800px;
    margin: 0 auto 40px;
    border: 4px solid #ffffff;
    box-shadow: 8px 8px 0 0 rgba(0,0,0,0.3);
    background: #05060f;
    aspect-ratio: 16/10;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .project-visual img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .visual-fallback {
    font-size: 1rem;
    color: #666;
    font-family: system-ui, sans-serif;
  }

  .project-description {
    max-width: 700px;
    margin: 0 auto;
    font-size: 0.9rem;
    line-height: 1.8;
    color: #f5f5ff;
  }

  .project-description p {
    margin-bottom: 12px;
  }

  .colors-section,
  .typo-section,
  .credits-section {
    text-align: center;
  }

  h2 {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    color: #ffffff;
    margin-bottom: 40px;
    text-shadow: 3px 3px 0 rgba(0,0,0,0.3);
    letter-spacing: 0.1em;
  }

  .color-showcase {
    display: flex;
    gap: 24px;
    justify-content: center;
    margin-bottom: 40px;
  }

  .color-box {
    width: 120px;
    height: 120px;
    border: 4px solid #ffffff;
    box-shadow: 6px 6px 0 0 rgba(0,0,0,0.3);
  }

  .typo-showcase {
    margin-bottom: 40px;
  }

  .font-display {
    margin-bottom: 30px;
  }

  .font-label {
    font-size: 1.2rem;
    color: #ffffff;
    display: block;
    margin-bottom: 12px;
  }

  .font-variants {
    display: flex;
    gap: 30px;
    justify-content: center;
    font-size: 1rem;
  }

  .bold-text {
    font-weight: 700;
  }

  .medium-text {
    font-weight: 500;
  }

  .font-label-large {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    color: #ffffff;
  }

  .section-text {
    max-width: 700px;
    margin: 0 auto;
    font-size: 0.9rem;
    line-height: 1.8;
    color: #f5f5ff;
  }

  .section-text p {
    margin-bottom: 12px;
  }

  .credits-footer {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 40px;
    margin-top: 50px;
  }

  .manolia-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
    background: #ffffff;
    border: 4px solid #522546;
    box-shadow: 4px 4px 0 0 rgba(0,0,0,0.3);
  }

  .manolia-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 24px;
    background: #ffffff;
    color: #141a7b;
    border: 3px solid #ffffff;
    font-family: 'Press Start 2P', monospace;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    text-decoration: none;
    cursor: pointer;
    box-shadow: 5px 5px 0 0 #141a7b;
    transition: all 0.2s;
  }

  .cta-button:hover {
    transform: translate(-2px, -2px);
    box-shadow: 7px 7px 0 0 #141a7b;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    background: transparent;
    border: none;
    color: #ffffff;
    font-size: 2rem;
    cursor: pointer;
    animation: bounce 2s ease-in-out infinite;
    z-index: 10;
    padding: 0;
  }

  @keyframes bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(10px); }
  }

  .scroll-indicator:hover {
    color: #ffd700;
  }

  @media (max-width: 768px) {
    .project-nav {
      padding: 20px;
    }

    .section {
      padding: 100px 30px 60px;
    }

    .color-box {
      width: 60px;
      height: 60px;
    }

    .credits-footer {
      flex-direction: column;
      gap: 30px;
    }
  }
</style>

<script>
  let currentSection = 0;
  const sections = document.querySelectorAll('.section');
  const dots = document.querySelectorAll('.dot');

  function goToSection(index: number) {
    if (index < 0 || index >= sections.length) return;
    
    sections[currentSection].classList.remove('active');
    dots[currentSection].classList.remove('active');
    
    currentSection = index;
    
    sections[currentSection].classList.add('active');
    dots[currentSection].classList.add('active');
  }

  // Navigation par les flèches du clavier
  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowDown' || e.key === 'ArrowRight') {
      goToSection(currentSection + 1);
    } else if (e.key === 'ArrowUp' || e.key === 'ArrowLeft') {
      goToSection(currentSection - 1);
    }
  });

  // Navigation par les dots
  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      goToSection(index);
    });
  });

  // Navigation par les indicateurs de scroll
  document.querySelectorAll('.scroll-indicator').forEach((indicator) => {
    indicator.addEventListener('click', () => {
      const nextIndex = parseInt(indicator.getAttribute('data-next') || '0');
      goToSection(nextIndex);
    });
  });

  // Navigation par scroll de la souris
  let isScrolling = false;
  document.addEventListener('wheel', (e) => {
    if (isScrolling) return;
    
    isScrolling = true;
    
    if (e.deltaY > 0) {
      goToSection(currentSection + 1);
    } else if (e.deltaY < 0) {
      goToSection(currentSection - 1);
    }
    
    setTimeout(() => {
      isScrolling = false;
    }, 800);
  });

  // Navigation tactile pour mobile
  let touchStartY = 0;
  document.addEventListener('touchstart', (e) => {
    touchStartY = e.touches[0].clientY;
  });

  document.addEventListener('touchend', (e) => {
    const touchEndY = e.changedTouches[0].clientY;
    const diff = touchStartY - touchEndY;
    
    if (Math.abs(diff) > 50) {
      if (diff > 0) {
        goToSection(currentSection + 1);
      } else {
        goToSection(currentSection - 1);
      }
    }
  });
</script>