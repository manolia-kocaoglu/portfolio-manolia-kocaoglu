---
import ProjectLayout from '../../layouts/ProjectLayout.astro';
import Header from '../../components/Header.astro';
import pb from '../../utils/pb';

export const prerender = false;

const { id } = Astro.params;

let projet;
try {
  projet = await pb.collection('projets').getOne(id || '');
  console.log('✅ Projet récupéré:', projet.titre);
} catch (error) {
  console.error('❌ Erreur:', error);
  return Astro.redirect('/portfolio');
}

const imageUrl = projet.image ? pb.files.getURL(projet, projet.image) : null;
const couleursImageUrl = projet.couleurs_image ? pb.files.getURL(projet, projet.couleurs_image) : null;
const demo1Url = projet.demo1 ? pb.files.getURL(projet, projet.demo1) : null;
const demo2Url = projet.demo2 ? pb.files.getURL(projet, projet.demo2) : null;
const demo3Url = projet.demo3 ? pb.files.getURL(projet, projet.demo3) : null;

const description = (projet.description ?? '').split('\n');
const couleurs = (projet.couleurs ?? '').split('\n');
const typographie = (projet.typographie ?? '').split('\n');
const credits = (projet.credits ?? '').split('\n');
const nomsTypo = (projet.noms_typographie ?? '').split('\n').filter((t: string) => t.trim());
---

<ProjectLayout title={`${projet.titre} - Manolia Kocaoglu`}>
  <Header />
  
  <div class="grid-bg"></div>
  
  <div class="pixel-decorations">
    <div class="pixel-shape" style="top: 10%; left: 5%;"></div>
    <div class="pixel-shape" style="top: 20%; right: 12%;"></div>
    <div class="pixel-cross" style="top: 15%; right: 20%;"></div>
    <div class="pixel-plus" style="bottom: 40%; left: 5%;"></div>
  </div>
  
  <div class="project-container">
    <div class="nav-dots">
      <button class="dot active" data-section="0"></button>
      <button class="dot" data-section="1"></button>
      <button class="dot" data-section="2"></button>
      <button class="dot" data-section="3"></button>
      <button class="dot" data-section="4"></button>
    </div>

    <div class="sections-wrapper">
      <!-- Section 1: Présentation -->
      <section class="section active" data-index="0">
        <div class="section-content">
          <div class="project-hero">
            <h1 class="project-title">{projet.titre}</h1>
            {projet.sous_titre && <p class="project-subtitle">{projet.sous_titre}</p>}
            
            <div class="project-visual">
              {imageUrl ? (
                <img src={imageUrl} alt={projet.titre} />
              ) : (
                <div class="visual-fallback">
                  <span>Mockup à venir</span>
                </div>
              )}
            </div>
            
            <div class="project-description">
              {description.map((p: string) => p && <p>{p}</p>)}
            </div>
          </div>
        </div>
        <button class="scroll-indicator" data-next="1">↓</button>
      </section>

      <!-- Section 2: Couleurs -->
      <section class="section" data-index="1">
        <div class="section-content">
          <div class="colors-section">
            <h2>HARMONIE COLORÉE</h2>
            
            {couleursImageUrl ? (
              <div class="colors-image">
                <img src={couleursImageUrl} alt="Palette de couleurs" />
              </div>
            ) : (
              <p class="no-content">Aucune palette de couleurs disponible</p>
            )}
            
            <div class="section-text">
              {couleurs.map((p: string) => p && <p>{p}</p>)}
            </div>
          </div>
        </div>
        <button class="scroll-indicator" data-next="2">↓</button>
      </section>

      <!-- Section 3: Typographie -->
      <section class="section" data-index="2">
        <div class="section-content">
          <div class="typo-section">
            <h2>TYPOGRAPHIE</h2>
            
            <div class="typo-showcase">
              {nomsTypo.length > 0 ? (
                nomsTypo.map((typo: string) => (
                  <div class="font-display">
                    <span class="font-label">{typo}</span>
                  </div>
                ))
              ) : (
                <p class="no-content">Aucune typographie spécifiée</p>
              )}
            </div>
            
            <div class="section-text">
              {typographie.map((p: string) => p && <p>{p}</p>)}
            </div>
          </div>
        </div>
        <button class="scroll-indicator" data-next="3">↓</button>
      </section>

      <!-- Section 4: Démonstrations -->
      <section class="section" data-index="3">
        <div class="section-content">
          <div class="demo-section">
            <h2>DÉMONSTRATIONS</h2>
            
            <div class="demo-gallery">
              {demo1Url && (
                <div class="demo-item">
                  <img src={demo1Url} alt="Démo 1" />
                </div>
              )}
              {demo2Url && (
                <div class="demo-item">
                  <img src={demo2Url} alt="Démo 2" />
                </div>
              )}
              {demo3Url && (
                <div class="demo-item">
                  <img src={demo3Url} alt="Démo 3" />
                </div>
              )}
              {!demo1Url && !demo2Url && !demo3Url && (
                <p class="no-content">Aucune démonstration disponible pour ce projet</p>
              )}
            </div>
          </div>
        </div>
        <button class="scroll-indicator" data-next="4">↓</button>
      </section>

      <!-- Section 5: Crédits -->
      <section class="section" data-index="4">
        <div class="section-content">
          <div class="credits-section">
            <h2>CRÉDITS</h2>
            
            <div class="section-text">
              {credits.map((p: string) => p && <p>{p}</p>)}
            </div>
            
            <div class="credits-footer">
              <div class="manolia-avatar">
                <img src="/manolia.svg" alt="Manolia" />
              </div>
              {projet.lien ? (
                <a href={projet.lien} target="_blank" class="cta-button">
                  <span>VOIR LE PROJET</span>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M5 12h14M12 5l7 7-7 7" stroke-width="2" stroke-linecap="round" />
                  </svg>
                </a>
              ) : (
                <a href="/portfolio" class="cta-button">
                  <span>RETOUR AU PORTFOLIO</span>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M5 12h14M12 5l7 7-7 7" stroke-width="2" stroke-linecap="round" />
                  </svg>
                </a>
              )}
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</ProjectLayout>

<style>
  /* Styles spécifiques à la page projet */
  .project-hero {
    text-align: center;
  }

  .project-title {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(1.2rem, 3vw, 2.5rem);
    color: #ffffff;
    margin-bottom: 8px;
    text-shadow: 4px 4px 0 rgba(0,0,0,0.3);
    letter-spacing: 0.1em;
  }

  .project-subtitle {
    font-size: 0.75rem;
    color: #dcdcff;
    margin-bottom: 20px;
  }

  .project-visual {
    max-width: 500px;
    max-height: 250px;
    margin: 0 auto 20px;
    border: 4px solid #ffffff;
    box-shadow: 8px 8px 0 0 rgba(0,0,0,0.3);
    background: #05060f;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .project-visual img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .visual-fallback {
    font-size: 1rem;
    color: #666;
    font-family: system-ui, sans-serif;
  }

  .project-description {
    max-width: 600px;
    margin: 0 auto;
    font-size: 0.75rem;
    line-height: 1.6;
    color: #f5f5ff;
    max-height: 150px;
    overflow-y: auto;
  }

  .project-description p {
    margin-bottom: 10px;
  }

  .colors-image {
    max-width: 300px;
    margin: 0 auto 40px;
    border: 4px solid #ffffff;
    box-shadow: 6px 6px 0 0 rgba(0,0,0,0.3);
    overflow: hidden;
    background: #05060f;
  }

  .colors-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .typo-showcase {
    margin-bottom: 40px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    align-items: center;
  }

  .font-display {
    margin-bottom: 10px;
  }

  .font-label {
    font-size: 1.2rem;
    color: #ffffff;
    display: block;
    font-weight: 600;
  }

  .demo-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    max-width: 1000px;
    margin: 0 auto 40px;
  }

  .demo-item {
    border: 4px solid #ffffff;
    box-shadow: 6px 6px 0 0 rgba(0,0,0,0.3);
    overflow: hidden;
    background: #05060f;
    transition: transform 0.3s ease;
  }

  .demo-item:hover {
    transform: translate(-3px, -3px);
    box-shadow: 9px 9px 0 0 rgba(0,0,0,0.4);
  }

  .demo-item img {
    width: 100%;
    height: auto;
    display: block;
  }
</style>

<script>
  let currentSection = 0;
  const sections = document.querySelectorAll('.section');
  const dots = document.querySelectorAll('.dot');

  function goToSection(index: number) {
    if (index < 0 || index >= sections.length) return;
    
    sections[currentSection].classList.remove('active');
    dots[currentSection].classList.remove('active');
    
    currentSection = index;
    
    sections[currentSection].classList.add('active');
    dots[currentSection].classList.add('active');
  }

  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowDown' || e.key === 'ArrowRight') {
      goToSection(currentSection + 1);
    } else if (e.key === 'ArrowUp' || e.key === 'ArrowLeft') {
      goToSection(currentSection - 1);
    }
  });

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      goToSection(index);
    });
  });

  document.querySelectorAll('.scroll-indicator').forEach((indicator) => {
    indicator.addEventListener('click', () => {
      const nextIndex = parseInt(indicator.getAttribute('data-next') || '0');
      goToSection(nextIndex);
    });
  });

  let isScrolling = false;
  let scrollTimeout: number;
  
  document.addEventListener('wheel', (e) => {
    if (isScrolling) return;
    e.preventDefault();
    
    if (Math.abs(e.deltaY) > 10) {
      isScrolling = true;
      
      if (e.deltaY > 0) {
        goToSection(currentSection + 1);
      } else {
        goToSection(currentSection - 1);
      }
      
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(() => {
        isScrolling = false;
      }, 1000);
    }
  }, { passive: false });

  let touchStartY = 0;
  document.addEventListener('touchstart', (e) => {
    touchStartY = e.touches[0].clientY;
  });

  document.addEventListener('touchend', (e) => {
    const touchEndY = e.changedTouches[0].clientY;
    const diff = touchStartY - touchEndY;
    
    if (Math.abs(diff) > 50) {
      if (diff > 0) {
        goToSection(currentSection + 1);
      } else {
        goToSection(currentSection - 1);
      }
    }
  });
</script>