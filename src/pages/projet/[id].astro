---
import ProjectLayout from '../../layouts/ProjectLayout.astro';
import Header from '../../components/Header.astro';
import pb from '../../utils/pb';

export const prerender = false;

const { id } = Astro.params;

let projet;
try {
  projet = await pb.collection('projets').getOne(id || '');
} catch (error) {
  console.error('‚ùå Erreur:', error);
  return Astro.redirect('/portfolio');
}

const imageUrl = projet.image ? pb.files.getURL(projet, projet.image) : null;
const couleursImageUrl = projet.couleurs_image ? pb.files.getURL(projet, projet.couleurs_image) : null;
const demo1Url = projet.demo1 ? pb.files.getURL(projet, projet.demo1) : null;
const demo2Url = projet.demo2 ? pb.files.getURL(projet, projet.demo2) : null;
const demo3Url = projet.demo3 ? pb.files.getURL(projet, projet.demo3) : null;

const description = (projet.description ?? '').split('\n').filter(p => p.trim());
const couleurs = (projet.couleurs ?? '').split('\n').filter(p => p.trim());
const typographie = (projet.typographie ?? '').split('\n').filter(p => p.trim());
const credits = (projet.credits ?? '').split('\n').filter(p => p.trim());
const nomsTypo = (projet.noms_typographie ?? '').split('\n').filter(t => t.trim());
---

<ProjectLayout title={`${projet.titre} - Manolia Kocaoglu`}>
  <Header currentPage="portfolio" />
  
  <div class="grid-bg"></div>
  
  <div class="pixel-decorations">
    <div class="pixel-shape" style="top: 10%; left: 5%;"></div>
    <div class="pixel-shape" style="top: 20%; right: 12%;"></div>
    <div class="pixel-cross" style="top: 15%; right: 20%;"></div>
    <div class="pixel-plus" style="bottom: 40%; left: 5%;"></div>
  </div>
  
  <div class="project-container">
    <div class="nav-dots">
      <button class="dot active" data-section="0"></button>
      <button class="dot" data-section="1"></button>
      <button class="dot" data-section="2"></button>
      <button class="dot" data-section="3"></button>
      <button class="dot" data-section="4"></button>
    </div>

    <div class="sections-wrapper">
      <!-- Section 1: Pr√©sentation -->
      <section class="section active" data-index="0">
        <div class="section-content presentation-section">
          <div class="project-hero">
            <h1 class="project-title">{projet.titre}</h1>
            {projet.sous_titre && <p class="project-subtitle">{projet.sous_titre}</p>}
            
            {imageUrl && (
              <div class="project-visual">
                <img src={imageUrl} alt={projet.titre} />
              </div>
            )}
            
            {description.length > 0 && (
              <div class="project-description">
                {description.map((p) => <p>{p}</p>)}
              </div>
            )}
          </div>
        </div>
        <button class="scroll-indicator" data-next="1">‚Üì</button>
      </section>

      <!-- Section 2: Couleurs -->
      <section class="section" data-index="1">
        <div class="section-content">
          <div class="colors-section">
            <h2>üé® HARMONIE COLOR√âE</h2>
            
            {couleursImageUrl && (
              <div class="colors-image">
                <img src={couleursImageUrl} alt="Palette de couleurs" />
              </div>
            )}
            
            {couleurs.length > 0 ? (
              <div class="section-text">
                {couleurs.map((p) => <p>{p}</p>)}
              </div>
            ) : (
              <p class="no-content">Aucune description de couleurs disponible</p>
            )}
          </div>
        </div>
        <button class="scroll-indicator" data-next="2">‚Üì</button>
      </section>

      <!-- Section 3: Typographie -->
      <section class="section" data-index="2">
        <div class="section-content">
          <div class="typo-section">
            <h2>‚úçÔ∏è TYPOGRAPHIE</h2>
            
            {nomsTypo.length > 0 && (
              <div class="typo-showcase">
                {nomsTypo.map((typo) => (
                  <div class="font-display">
                    <span class="font-label">{typo}</span>
                  </div>
                ))}
              </div>
            )}
            
            {typographie.length > 0 ? (
              <div class="section-text">
                {typographie.map((p) => <p>{p}</p>)}
              </div>
            ) : (
              <p class="no-content">Aucune description typographique disponible</p>
            )}
          </div>
        </div>
        <button class="scroll-indicator" data-next="3">‚Üì</button>
      </section>

      <!-- Section 4: D√©monstrations -->
      <section class="section" data-index="3">
        <div class="section-content">
          <div class="demo-section">
            <h2>üì± D√âMONSTRATIONS</h2>
            
            {(demo1Url || demo2Url || demo3Url) ? (
              <div class="demo-gallery">
                {demo1Url && (
                  <div class="demo-item">
                    <img src={demo1Url} alt="D√©mo 1" />
                  </div>
                )}
                {demo2Url && (
                  <div class="demo-item">
                    <img src={demo2Url} alt="D√©mo 2" />
                  </div>
                )}
                {demo3Url && (
                  <div class="demo-item">
                    <img src={demo3Url} alt="D√©mo 3" />
                  </div>
                )}
              </div>
            ) : (
              <p class="no-content">Aucune d√©monstration disponible pour ce projet</p>
            )}
          </div>
        </div>
        <button class="scroll-indicator" data-next="4">‚Üì</button>
      </section>

      <!-- Section 5: Cr√©dits -->
      <section class="section" data-index="4">
        <div class="section-content">
          <div class="credits-section">
            <h2>‚ú® CR√âDITS</h2>
            
            {credits.length > 0 ? (
              <div class="section-text">
                {credits.map((p) => <p>{p}</p>)}
              </div>
            ) : (
              <p class="no-content">Projet personnel r√©alis√© par Manolia Kocaoglu</p>
            )}
            
            <div class="credits-footer">
              <div class="manolia-avatar">
                <img src="/manolia.svg" alt="Manolia" />
              </div>
              {projet.lien ? (
                <a href={projet.lien} target="_blank" class="cta-button">
                  <span>VOIR LE PROJET</span>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </a>
              ) : (
                <a href="/portfolio" class="cta-button">
                  <span>RETOUR PORTFOLIO</span>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M19 12H5M12 19l-7-7 7-7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </a>
              )}
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</ProjectLayout>

<style>
  .grid-bg {
    position: fixed;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255,255,255,0.06) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.06) 1px, transparent 1px);
    background-size: 60px 60px;
    opacity: 0.7;
    z-index: 0;
  }

  .pixel-decorations {
    position: fixed;
    inset: 0;
    z-index: 1;
    pointer-events: none;
  }

  .pixel-shape,
  .pixel-cross,
  .pixel-plus {
    position: absolute;
    width: 18px;
    height: 18px;
    background: rgba(255, 255, 255, 0.15);
    animation: float 3s ease-in-out infinite;
  }

  .pixel-cross {
    background:
      linear-gradient(rgba(255,255,255,0.25) 5px, transparent 5px, transparent 11px, rgba(255,255,255,0.25) 11px),
      linear-gradient(90deg, rgba(255,255,255,0.25) 5px, transparent 5px, transparent 11px, rgba(255,255,255,0.25) 11px);
  }

  .pixel-plus {
    clip-path: polygon(40% 0%, 60% 0%, 60% 40%, 100% 40%, 100% 60%, 60% 60%, 60% 100%, 40% 100%, 40% 60%, 0% 60%, 0% 40%, 40% 40%);
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); opacity: 0.7; }
    50% { transform: translateY(-10px); opacity: 1; }
  }

  .project-container {
    width: 100vw;
    height: 100vh;
    position: relative;
    overflow: hidden;
  }

  .nav-dots {
    position: fixed;
    top: 50%;
    right: 40px;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 16px;
    z-index: 100;
  }

  .dot {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: rgba(255,255,255,0.3);
    border: 2px solid #ffffff;
    cursor: pointer;
    transition: all 0.3s;
    padding: 0;
  }

  .dot.active {
    background: #ffffff;
    transform: scale(1.4);
  }

  .dot:hover {
    background: rgba(255,255,255,0.6);
    transform: scale(1.2);
  }

  .sections-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .section {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 140px 40px 100px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease, visibility 0.6s;
  }

  .section.active {
    opacity: 1;
    visibility: visible;
    z-index: 2;
  }

  .section-content {
    max-width: 1000px;
    width: 100%;
    margin: 0 auto;
    max-height: calc(100vh - 280px);
    overflow-y: auto;
    padding-right: 10px;
  }

  .section-content::-webkit-scrollbar {
    width: 8px;
  }

  .section-content::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
  }

  .section-content::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.4);
    border-radius: 4px;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    background: transparent;
    border: none;
    color: #ffffff;
    font-size: 2.5rem;
    cursor: pointer;
    animation: bounce 2s ease-in-out infinite;
    z-index: 10;
    padding: 0;
    line-height: 1;
  }

  .scroll-indicator:hover {
    color: #ffd700;
  }

  @keyframes bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(10px); }
  }

  h2 {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(1.2rem, 2.5vw, 1.8rem);
    color: #ffffff;
    margin-bottom: 40px;
    text-shadow: 3px 3px 0 rgba(0,0,0,0.3);
    letter-spacing: 0.08em;
    text-align: center;
  }

  .project-hero {
    text-align: center;
  }

  .project-title {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    color: #ffffff;
    margin-bottom: 12px;
    text-shadow: 4px 4px 0 rgba(0,0,0,0.3);
    letter-spacing: 0.1em;
    line-height: 1.4;
  }

  .project-subtitle {
    font-size: 0.9rem;
    color: #dcdcff;
    margin-bottom: 30px;
    letter-spacing: 0.05em;
  }

  .project-visual {
    max-width: 600px;
    margin: 0 auto 30px;
    border: 4px solid #ffffff;
    box-shadow: 8px 8px 0 0 rgba(0,0,0,0.3);
    background: #05060f;
    overflow: hidden;
  }

  .project-visual img {
    width: 100%;
    height: auto;
    display: block;
  }

  .project-description {
    max-width: 700px;
    margin: 0 auto;
    font-size: 0.85rem;
    line-height: 1.8;
    color: #f5f5ff;
    text-align: left;
  }

  .project-description p {
    margin-bottom: 15px;
  }

  .colors-image {
    max-width: 400px;
    margin: 0 auto 40px;
    border: 4px solid #ffffff;
    box-shadow: 6px 6px 0 0 rgba(0,0,0,0.3);
    overflow: hidden;
    background: #05060f;
  }

  .colors-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .section-text {
    max-width: 700px;
    margin: 0 auto;
    font-size: 0.85rem;
    line-height: 1.8;
    color: #f5f5ff;
    text-align: left;
  }

  .section-text p {
    margin-bottom: 15px;
  }

  .typo-showcase {
    margin-bottom: 40px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    align-items: center;
  }

  .font-display {
    padding: 20px;
    background: rgba(255,255,255,0.05);
    border: 3px solid rgba(255,255,255,0.3);
    border-radius: 8px;
    min-width: 300px;
    text-align: center;
  }

  .font-label {
    font-size: 1.5rem;
    color: #ffffff;
    display: block;
    font-weight: 600;
  }

  .demo-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    margin-bottom: 40px;
  }

  .demo-item {
    border: 4px solid #ffffff;
    box-shadow: 6px 6px 0 0 rgba(0,0,0,0.3);
    overflow: hidden;
    background: #05060f;
    transition: transform 0.3s ease;
  }

  .demo-item:hover {
    transform: translate(-3px, -3px);
    box-shadow: 9px 9px 0 0 rgba(0,0,0,0.4);
  }

  .demo-item img {
    width: 100%;
    height: auto;
    display: block;
  }

  .no-content {
    font-size: 0.9rem;
    color: #dcdcff;
    font-style: italic;
    text-align: center;
    padding: 40px 20px;
  }

  .credits-footer {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 40px;
    margin-top: 50px;
    flex-wrap: wrap;
  }

  .manolia-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
    background: #ffffff;
    border: 4px solid #ffffff;
    box-shadow: 4px 4px 0 0 rgba(0,0,0,0.3);
  }

  .manolia-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.4);
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 24px;
    background: #ffffff;
    color: #141a7b;
    border: 3px solid #ffffff;
    font-family: 'Press Start 2P', monospace;
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    text-decoration: none;
    cursor: pointer;
    box-shadow: 5px 5px 0 0 rgba(0,0,0,0.3);
    transition: all 0.2s;
  }

  .cta-button:hover {
    transform: translate(-2px, -2px);
    box-shadow: 7px 7px 0 0 rgba(0,0,0,0.4);
    background: #ffd700;
  }

  @media (max-width: 768px) {
    .nav-dots {
      right: 20px;
    }

    .section {
      padding: 120px 20px 80px;
    }

    .section-content {
      max-height: calc(100vh - 240px);
    }

    .project-title {
      font-size: 1.2rem;
    }

    .demo-gallery {
      grid-template-columns: 1fr;
    }

    .credits-footer {
      flex-direction: column;
      gap: 25px;
    }
  }
</style>

<script>
  let currentSection = 0;
  const sections = document.querySelectorAll('.section');
  const dots = document.querySelectorAll('.dot');

  function goToSection(index: number) {
    if (index < 0 || index >= sections.length) return;
    
    sections[currentSection].classList.remove('active');
    dots[currentSection].classList.remove('active');
    
    currentSection = index;
    
    sections[currentSection].classList.add('active');
    dots[currentSection].classList.add('active');
  }

  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowDown' || e.key === 'ArrowRight') {
      goToSection(currentSection + 1);
    } else if (e.key === 'ArrowUp' || e.key === 'ArrowLeft') {
      goToSection(currentSection - 1);
    }
  });

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      goToSection(index);
    });
  });

  document.querySelectorAll('.scroll-indicator').forEach((indicator) => {
    indicator.addEventListener('click', () => {
      const nextIndex = parseInt(indicator.getAttribute('data-next') || '0');
      goToSection(nextIndex);
    });
  });

  let isScrolling = false;
  let scrollTimeout: number;
  
  document.addEventListener('wheel', (e) => {
    if (isScrolling) return;
    e.preventDefault();
    
    if (Math.abs(e.deltaY) > 10) {
      isScrolling = true;
      
      if (e.deltaY > 0) {
        goToSection(currentSection + 1);
      } else {
        goToSection(currentSection - 1);
      }
      
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(() => {
        isScrolling = false;
      }, 1000);
    }
  }, { passive: false });

  let touchStartY = 0;
  document.addEventListener('touchstart', (e) => {
    touchStartY = e.touches[0].clientY;
  });

  document.addEventListener('touchend', (e) => {
    const touchEndY = e.changedTouches[0].clientY;
    const diff = touchStartY - touchEndY;
    
    if (Math.abs(diff) > 50) {
      if (diff > 0) {
        goToSection(currentSection + 1);
      } else {
        goToSection(currentSection - 1);
      }
    }
  });
</script>