---
import ProjectLayout from '../../layouts/ProjectLayout.astro';
import Header from '../../components/Header.astro';
import PocketBase from 'pocketbase';

export async function getStaticPaths() {
  const pb = new PocketBase('http://127.0.0.1:8090');
  const projets = await pb.collection('projets').getFullList();
  
  return projets.map((projet) => ({
    params: { id: projet.id },
    props: { projet },
  }));
}

const { projet } = Astro.props;
const pb = new PocketBase('http://127.0.0.1:8090');

// Images
const imageUrl = projet.image ? pb.getFileUrl(projet, projet.image) : null;
const couleursImageUrl = projet.couleurs_image ? pb.getFileUrl(projet, projet.couleurs_image) : null;
const demo1Url = projet.demo1 ? pb.getFileUrl(projet, projet.demo1) : null;
const demo2Url = projet.demo2 ? pb.getFileUrl(projet, projet.demo2) : null;
const demo3Url = projet.demo3 ? pb.getFileUrl(projet, projet.demo3) : null;

// Textes
const description = (projet.description ?? '').split('\n');
const couleurs = (projet.couleurs ?? '').split('\n');
const typographie = (projet.typographie ?? '').split('\n');
const credits = (projet.credits ?? '').split('\n');

// Noms des typographies (séparés par des sauts de ligne dans PocketBase)
const nomsTypo = (projet.noms_typographie ?? '').split('\n').filter((t: string) => t.trim());
---

<ProjectLayout title={`${projet.titre} - Manolia Kocaoglu`}>
  <Header />
  
  <div class="project-container">
    <!-- Dots de navigation -->
    <div class="nav-dots">
      <button class="dot active" data-section="0"></button>
      <button class="dot" data-section="1"></button>
      <button class="dot" data-section="2"></button>
      <button class="dot" data-section="3"></button>
      <button class="dot" data-section="4"></button>
    </div>

    <!-- Sections fullscreen -->
    <div class="sections-wrapper">
      <!-- Section 1: Présentation -->
      <section class="section active" data-index="0">
        <div class="section-content">
          <div class="project-hero">
            <h1 class="project-title">{projet.titre}</h1>
            <p class="project-subtitle">{projet.sous_titre || ''}</p>
            
            <div class="project-visual">
              {imageUrl ? (
                <img src={imageUrl} alt={projet.titre} />
              ) : (
                <div class="visual-fallback">
                  <span>Mockup à venir</span>
                </div>
              )}
            </div>
            
            <div class="project-description">
              {description.map((p: string) => p && <p>{p}</p>)}
            </div>
          </div>
        </div>
        <button class="scroll-indicator" data-next="1">↓</button>
      </section>

      <!-- Section 2: Couleurs -->
      <section class="section" data-index="1">
        <div class="section-content">
          <div class="colors-section">
            <h2>HARMONIE COLORÉE</h2>
            
            {couleursImageUrl ? (
              <div class="colors-image" style="max-width: 300px;">
                <img src={couleursImageUrl} alt="Palette de couleurs" style="width: 100%; height: auto;" />
              </div>
            ) : null}
            
            <div class="section-text">
              {couleurs.map((p: string) => p && <p>{p}</p>)}
            </div>
          </div>
        </div>
        <button class="scroll-indicator" data-next="2">↓</button>
      </section>

      <!-- Section 3: Typographie -->
      <section class="section" data-index="2">
        <div class="section-content">
          <div class="typo-section">
            <h2>TYPOGRAPHIE</h2>
            
            <div class="typo-showcase">
              {nomsTypo.length > 0 ? (
                nomsTypo.map((typo: string) => (
                  <div class="font-display">
                    <span class="font-label">{typo}</span>
                  </div>
                ))
              ) : (
                <div class="font-display">
                  <span class="font-label">Typographie principale</span>
                  <div class="font-variants">
                    <span class="bold-text">Bold</span>
                    <span class="medium-text">Medium</span>
                  </div>
                </div>
              )}
            </div>
            
            <div class="section-text">
              {typographie.map((p: string) => p && <p>{p}</p>)}
            </div>
          </div>
        </div>
        <button class="scroll-indicator" data-next="3">↓</button>
      </section>

      <!-- Section 4: Démonstrations -->
      <section class="section" data-index="3">
        <div class="section-content">
          <div class="demo-section">
            <h2>DÉMONSTRATIONS</h2>
            
            <div class="demo-gallery">
              {demo1Url && (
                <div class="demo-item">
                  <img src={demo1Url} alt="Démo 1" />
                </div>
              )}
              {demo2Url && (
                <div class="demo-item">
                  <img src={demo2Url} alt="Démo 2" />
                </div>
              )}
              {demo3Url && (
                <div class="demo-item">
                  <img src={demo3Url} alt="Démo 3" />
                </div>
              )}
              {!demo1Url && !demo2Url && !demo3Url && (
                <p class="no-demos">Aucune démonstration disponible pour ce projet</p>
              )}
            </div>
          </div>
        </div>
        <button class="scroll-indicator" data-next="4">↓</button>
      </section>

      <!-- Section 5: Crédits -->
      <section class="section" data-index="3">
        <div class="section-content">
          <div class="credits-section">
            <h2>CRÉDITS</h2>
            
            <div class="section-text">
              {credits.map((p: string) => p && <p>{p}</p>)}
            </div>
            
            <div class="credits-footer">
              <div class="manolia-avatar">
                <img src="/manolia.svg" alt="Manolia" />
              </div>
              <a href="/portfolio" class="cta-button">
                <span>RETOUR AU PORTFOLIO</span>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path d="M5 12h14M12 5l7 7-7 7" stroke-width="2" stroke-linecap="round" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</ProjectLayout>

<style>
  .project-container {
    width: 100vw;
    height: 100vh;
    position: relative;
    overflow: hidden;
  }

  .nav-dots {
    position: fixed;
    top: 50%;
    right: 40px;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 16px;
    z-index: 100;
  }

  .dot {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: rgba(255,255,255,0.3);
    border: 2px solid #ffffff;
    cursor: pointer;
    transition: all 0.3s;
    padding: 0;
  }

  .dot.active {
    background: #ffffff;
    transform: scale(1.4);
  }

  .dot:hover {
    background: rgba(255,255,255,0.6);
    transform: scale(1.2);
  }

  .sections-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .section {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 120px 40px 80px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease, visibility 0.6s;
  }

  .section.active {
    opacity: 1;
    visibility: visible;
    z-index: 2;
  }

  .section-content {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
  }

  .project-hero {
    text-align: center;
  }

  .project-title {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(1.2rem, 3vw, 2.5rem);
    color: #ffffff;
    margin-bottom: 8px;
    text-shadow: 4px 4px 0 rgba(0,0,0,0.3);
    letter-spacing: 0.1em;
  }

  .project-subtitle {
    font-size: 0.75rem;
    color: #dcdcff;
    margin-bottom: 20px;
  }

  .project-visual {
    max-width: 500px;
    max-height: 250px;
    margin: 0 auto 20px;
    border: 4px solid #ffffff;
    box-shadow: 8px 8px 0 0 rgba(0,0,0,0.3);
    background: #05060f;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .project-visual img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .visual-fallback {
    font-size: 1rem;
    color: #666;
    font-family: system-ui, sans-serif;
  }

  .project-description {
    max-width: 600px;
    margin: 0 auto;
    font-size: 0.75rem;
    line-height: 1.6;
    color: #f5f5ff;
    max-height: 150px;
    overflow-y: auto;
  }

  .project-description p {
    margin-bottom: 10px;
  }

  .colors-section,
  .typo-section,
  .demo-section,
  .credits-section {
    text-align: center;
  }

  h2 {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    color: #ffffff;
    margin-bottom: 40px;
    text-shadow: 3px 3px 0 rgba(0,0,0,0.3);
    letter-spacing: 0.1em;
  }

  .color-showcase {
    display: flex;
    gap: 24px;
    justify-content: center;
    margin-bottom: 40px;
  }

  .colors-image {
    max-width: 600px;
    margin: 0 auto 40px;
    border: 4px solid #ffffff;
    box-shadow: 6px 6px 0 0 rgba(0,0,0,0.3);
    overflow: hidden;
  }

  .colors-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .color-box {
    width: 120px;
    height: 120px;
    border: 4px solid #ffffff;
    box-shadow: 6px 6px 0 0 rgba(0,0,0,0.3);
  }

  .typo-showcase {
    margin-bottom: 40px;
  }

  .font-display {
    margin-bottom: 30px;
  }

  .font-label {
    font-size: 1.2rem;
    color: #ffffff;
    display: block;
    margin-bottom: 12px;
  }

  .font-variants {
    display: flex;
    gap: 30px;
    justify-content: center;
    font-size: 1rem;
  }

  .bold-text {
    font-weight: 700;
  }

  .medium-text {
    font-weight: 500;
  }

  .font-label-large {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    color: #ffffff;
  }

  .section-text {
    max-width: 700px;
    margin: 0 auto;
    font-size: 0.9rem;
    line-height: 1.8;
    color: #f5f5ff;
  }

  .section-text p {
    margin-bottom: 12px;
  }

  .demo-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .demo-item {
    border: 4px solid #ffffff;
    box-shadow: 6px 6px 0 0 rgba(0,0,0,0.3);
    overflow: hidden;
    background: #05060f;
    transition: transform 0.3s ease;
  }

  .demo-item:hover {
    transform: translate(-3px, -3px);
    box-shadow: 9px 9px 0 0 rgba(0,0,0,0.4);
  }

  .demo-item img {
    width: 100%;
    height: auto;
    display: block;
  }

  .no-demos {
    font-size: 0.9rem;
    color: #dcdcff;
    font-style: italic;
  }

  .credits-footer {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 40px;
    margin-top: 50px;
  }

  .manolia-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
    background: #ffffff;
    border: 4px solid #522546;
    box-shadow: 4px 4px 0 0 rgba(0,0,0,0.3);
  }

  .manolia-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 24px;
    background: #ffffff;
    color: #141a7b;
    border: 3px solid #ffffff;
    font-family: 'Press Start 2P', monospace;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    text-decoration: none;
    cursor: pointer;
    box-shadow: 5px 5px 0 0 #141a7b;
    transition: all 0.2s;
  }

  .cta-button:hover {
    transform: translate(-2px, -2px);
    box-shadow: 7px 7px 0 0 #141a7b;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    background: transparent;
    border: none;
    color: #ffffff;
    font-size: 2rem;
    cursor: pointer;
    animation: bounce 2s ease-in-out infinite;
    z-index: 10;
    padding: 0;
  }

  @keyframes bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(10px); }
  }

  .scroll-indicator:hover {
    color: #ffd700;
  }

  @media (max-width: 768px) {
    .section {
      padding: 100px 30px 60px;
    }

    .color-box {
      width: 60px;
      height: 60px;
    }

    .demo-gallery {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .credits-footer {
      flex-direction: column;
      gap: 30px;
    }
  }
</style>

<script>
  let currentSection = 0;
  const sections = document.querySelectorAll('.section');
  const dots = document.querySelectorAll('.dot');

  function goToSection(index: number) {
    if (index < 0 || index >= sections.length) return;
    
    sections[currentSection].classList.remove('active');
    dots[currentSection].classList.remove('active');
    
    currentSection = index;
    
    sections[currentSection].classList.add('active');
    dots[currentSection].classList.add('active');
  }

  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowDown' || e.key === 'ArrowRight') {
      goToSection(currentSection + 1);
    } else if (e.key === 'ArrowUp' || e.key === 'ArrowLeft') {
      goToSection(currentSection - 1);
    }
  });

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      goToSection(index);
    });
  });

  document.querySelectorAll('.scroll-indicator').forEach((indicator) => {
    indicator.addEventListener('click', () => {
      const nextIndex = parseInt(indicator.getAttribute('data-next') || '0');
      goToSection(nextIndex);
    });
  });

  let isScrolling = false;
  let scrollTimeout: number;
  
  document.addEventListener('wheel', (e) => {
    if (isScrolling) return;
    
    e.preventDefault();
    
    if (Math.abs(e.deltaY) > 10) {
      isScrolling = true;
      
      if (e.deltaY > 0) {
        goToSection(currentSection + 1);
      } else {
        goToSection(currentSection - 1);
      }
      
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(() => {
        isScrolling = false;
      }, 1000);
    }
  }, { passive: false });

  let touchStartY = 0;
  document.addEventListener('touchstart', (e) => {
    touchStartY = e.touches[0].clientY;
  });

  document.addEventListener('touchend', (e) => {
    const touchEndY = e.changedTouches[0].clientY;
    const diff = touchStartY - touchEndY;
    
    if (Math.abs(diff) > 50) {
      if (diff > 0) {
        goToSection(currentSection + 1);
      } else {
        goToSection(currentSection - 1);
      }
    }
  });
</script>