---
import Layout from '../layouts/Layout.astro';
import InkspireProject from '../components/InkspireProject.astro';
import PocketBase from 'pocketbase';

// URL de PB (local pour l’instant)
const pb = new PocketBase('http://127.0.0.1:8090');

// récupère le premier projet de la collection "projets"
const projet = await pb.collection('projets').getFirstListItem('');

// URL de l'image PocketBase si elle existe
const imageUrl = projet?.image ? pb.getFileUrl(projet, projet.image) : null;
---

<Layout title="Portfolio - Manolia Kocaoglu">
  <!-- Grille de fond -->
  <div class="grid-bg"></div>
  
  <!-- Éléments décoratifs pixelisés -->
  <div class="pixel-decorations">
    <div class="pixel-shape" style="top: 10%; left: 5%;"></div>
    <div class="pixel-shape" style="top: 20%; left: 20%;"></div>
    <div class="pixel-shape" style="top: 30%; right: 5%;"></div>
    <div class="pixel-shape" style="bottom: 20%; right: 15%;"></div>
    <div class="pixel-cross" style="top: 15%; right: 20%;"></div>
    <div class="pixel-plus" style="bottom: 40%; left: 5%;"></div>
  </div>

  <div class="container">
    <!-- Navigation -->
    <nav class="top-nav">
      <a href="/" class="back-btn">← Accueil</a>
      <div class="logo">⌂</div>
      <div class="social-icons">
        <a href="#" aria-label="LinkedIn">in</a>
        <a href="#" aria-label="Behance">Be</a>
      </div>
    </nav>

    <!-- Section projet alimentée par PocketBase -->
    <InkspireProject projet={projet} imageUrl={imageUrl} />
  </div>
</Layout>

<style>
  :global(body) {
    background: radial-gradient(circle at top, #2f3fff 0%, #141a7b 35%, #05082f 100%);
    overflow-x: hidden;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Montserrat', sans-serif;
  }

  .grid-bg {
    position: fixed;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255,255,255,0.06) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.06) 1px, transparent 1px);
    background-size: 60px 60px;
    opacity: 0.7;
    z-index: 0;
  }

  .pixel-decorations {
    position: fixed;
    inset: 0;
    z-index: 1;
    pointer-events: none;
  }

  .pixel-shape,
  .pixel-cross,
  .pixel-plus {
    position: absolute;
    width: 18px;
    height: 18px;
    background: rgba(255, 255, 255, 0.15);
    image-rendering: pixelated;
    animation: float 3s ease-in-out infinite;
  }

  .pixel-cross {
    width: 16px;
    height: 16px;
    background:
      linear-gradient(rgba(255,255,255,0.25) 5px, transparent 5px, transparent 11px, rgba(255,255,255,0.25) 11px),
      linear-gradient(90deg, rgba(255,255,255,0.25) 5px, transparent 5px, transparent 11px, rgba(255,255,255,0.25) 11px);
    animation-delay: 0.8s;
  }

  .pixel-plus {
    width: 14px;
    height: 14px;
    clip-path: polygon(
      40% 0%, 60% 0%, 60% 40%, 100% 40%,
      100% 60%, 60% 60%, 60% 100%, 40% 100%,
      40% 60%, 0% 60%, 0% 40%, 40% 40%
    );
    animation-delay: 1.6s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); opacity: 0.7; }
    50% { transform: translateY(-10px); opacity: 1; }
  }

  .container {
    position: relative;
    z-index: 2;
    min-height: 100vh;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 40px 60px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .top-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .back-btn {
    color: #ffffff;
    text-decoration: none;
    font-size: 0.9rem;
    padding: 8px 16px;
    border: 2px solid #fff;
    background: rgba(0,0,0,0.15);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-family: 'Press Start 2P', monospace;
    image-rendering: pixelated;
    transition: all 0.2s;
  }

  .back-btn:hover {
    background: #ffffff;
    color: #141a7b;
    transform: translateX(-3px);
  }

  .logo {
    font-size: 1.7rem;
    color: #fff;
  }

  .social-icons {
    display: flex;
    gap: 10px;
  }

  .social-icons a {
    color: #ffffff;
    text-decoration: none;
    padding: 6px 12px;
    border: 2px solid #fff;
    font-family: 'Press Start 2P', monospace;
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    background: rgba(0,0,0,0.15);
    transition: all 0.2s;
  }

  .social-icons a:hover {
    background: #ffffff;
    color: #141a7b;
  }

  @media (max-width: 1100px) {
    .container {
      padding-inline: 20px;
    }
  }

  @media (max-width: 650px) {
    .container {
      padding: 24px 16px 40px;
      gap: 20px;
    }

    .top-nav {
      flex-wrap: wrap;
      gap: 12px;
    }

    .social-icons {
      width: 100%;
      justify-content: flex-end;
    }
  }
</style>
