---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import pb from '../utils/pb';


// Récupère TOUS les projets
const projets = await pb.collection('projets').getFullList({
  sort: '-created',
  $autoCancel: false
});
---
---

<Layout title="Portfolio - Manolia Kocaoglu">
  <Header currentPage="portfolio" />
  
  <div class="grid-bg"></div>
  
  <div class="pixel-decorations">
    <div class="pixel-shape" style="top: 10%; left: 5%;"></div>
    <div class="pixel-shape" style="top: 20%; left: 20%;"></div>
    <div class="pixel-shape" style="top: 30%; right: 5%;"></div>
    <div class="pixel-shape" style="bottom: 20%; right: 15%;"></div>
    <div class="pixel-cross" style="top: 15%; right: 20%;"></div>
    <div class="pixel-plus" style="bottom: 40%; left: 5%;"></div>
  </div>

  <div class="container">
    <section class="portfolio-header">
      <h1>MES PROJETS</h1>
      <p class="header-subtitle">Sélectionne un niveau pour commencer</p>
    </section>

    <div class="projects-grid">
      {projets.map((projet, index) => {
        const imageUrl = projet.image ? pb.files.getURL(projet, projet.image) : null;
        
        return (
          <a href={`/projet/${projet.id}`} class="project-card" data-index={index}>
            <div class="card-inner">
              <div class="card-thumbnail">
                {imageUrl ? (
                  <img src={imageUrl} alt={projet.titre} />
                ) : (
                  <div class="thumbnail-fallback">
                    <span>?</span>
                  </div>
                )}
                <div class="card-overlay">
                  <span class="play-icon">▶</span>
                </div>
              </div>
              
              <div class="card-content">
                <h2 class="card-title">{projet.titre}</h2>
                <p class="card-description">
                  {projet.description?.split('\n')[0] || 'Découvrir le projet'}
                </p>
                <div class="card-footer">
                  <span class="level-badge">LVL {index + 1}</span>
                  <span class="arrow">→</span>
                </div>
              </div>
            </div>
          </a>
        );
      })}
    </div>
  </div>
</Layout>

<style>
  :global(body) {
    background: radial-gradient(circle at top, #2f3fff 0%, #141a7b 35%, #05082f 100%);
    overflow-x: hidden;
  }

  .grid-bg {
    position: fixed;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255,255,255,0.06) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.06) 1px, transparent 1px);
    background-size: 60px 60px;
    opacity: 0.7;
    z-index: 0;
  }

  .pixel-decorations {
    position: fixed;
    inset: 0;
    z-index: 1;
    pointer-events: none;
  }

  .pixel-shape,
  .pixel-cross,
  .pixel-plus {
    position: absolute;
    width: 18px;
    height: 18px;
    background: rgba(255, 255, 255, 0.15);
    animation: float 3s ease-in-out infinite;
  }

  .pixel-cross {
    background:
      linear-gradient(rgba(255,255,255,0.25) 5px, transparent 5px, transparent 11px, rgba(255,255,255,0.25) 11px),
      linear-gradient(90deg, rgba(255,255,255,0.25) 5px, transparent 5px, transparent 11px, rgba(255,255,255,0.25) 11px);
  }

  .pixel-plus {
    clip-path: polygon(40% 0%, 60% 0%, 60% 40%, 100% 40%, 100% 60%, 60% 60%, 60% 100%, 40% 100%, 40% 60%, 0% 60%, 0% 40%, 40% 40%);
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); opacity: 0.7; }
    50% { transform: translateY(-10px); opacity: 1; }
  }

  .container {
    position: relative;
    z-index: 2;
    min-height: 100vh;
    max-width: 1400px;
    margin: 0 auto;
    padding: 140px 40px 60px;
  }

  .top-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 60px;
  }

  .back-btn {
    color: #ffffff;
    text-decoration: none;
    font-size: 0.8rem;
    padding: 10px 18px;
    border: 3px solid #fff;
    background: rgba(0,0,0,0.2);
    font-family: 'Press Start 2P', monospace;
    box-shadow: 4px 4px 0 0 rgba(0,0,0,0.3);
    transition: all 0.2s;
  }

  .back-btn:hover {
    background: #ffffff;
    color: #141a7b;
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 0 rgba(0,0,0,0.3);
  }

  .logo {
    font-size: 2rem;
    color: #fff;
  }

  .social-icons {
    display: flex;
    gap: 12px;
  }

  .social-icons a {
    color: #ffffff;
    text-decoration: none;
    padding: 8px 14px;
    border: 3px solid #fff;
    font-family: 'Press Start 2P', monospace;
    font-size: 0.6rem;
    background: rgba(0,0,0,0.2);
    box-shadow: 3px 3px 0 0 rgba(0,0,0,0.3);
    transition: all 0.2s;
  }

  .social-icons a:hover {
    background: #ffffff;
    color: #141a7b;
    transform: translate(-2px, -2px);
    box-shadow: 5px 5px 0 0 rgba(0,0,0,0.3);
  }

  .portfolio-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .portfolio-header h1 {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(2rem, 5vw, 3.5rem);
    color: #ffffff;
    margin-bottom: 20px;
    text-shadow: 4px 4px 0 rgba(0,0,0,0.3);
    letter-spacing: 0.1em;
  }

  .header-subtitle {
    font-size: 1rem;
    color: #dcdcff;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 40px;
    padding-bottom: 60px;
  }

  .project-card {
    text-decoration: none;
    display: block;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .project-card[data-index="0"] { animation-delay: 0.1s; }
  .project-card[data-index="1"] { animation-delay: 0.2s; }
  .project-card[data-index="2"] { animation-delay: 0.3s; }
  .project-card[data-index="3"] { animation-delay: 0.4s; }
  .project-card[data-index="4"] { animation-delay: 0.5s; }
  .project-card[data-index="5"] { animation-delay: 0.6s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .card-inner {
    background: #111b9f;
    border: 3px solid #ffffff;
    box-shadow: 6px 6px 0 0 rgba(0,0,0,0.4);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .project-card:hover .card-inner {
    transform: translate(-4px, -4px);
    box-shadow: 10px 10px 0 0 rgba(0,0,0,0.5);
  }

  .card-thumbnail {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
    background: #05060f;
  }

  .card-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .project-card:hover .card-thumbnail img {
    transform: scale(1.05);
  }

  .thumbnail-fallback {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Press Start 2P', monospace;
    font-size: 3rem;
    color: rgba(255,255,255,0.3);
  }

  .card-overlay {
    position: absolute;
    inset: 0;
    background: rgba(17, 27, 159, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .project-card:hover .card-overlay {
    opacity: 1;
  }

  .play-icon {
    font-size: 3rem;
    color: #ffffff;
    animation: pulse 1.5s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  .card-content {
    padding: 24px;
    color: #ffffff;
  }

  .card-title {
    font-family: 'Press Start 2P', monospace;
    font-size: 1.2rem;
    margin-bottom: 12px;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-description {
    font-size: 0.85rem;
    line-height: 1.6;
    color: #dcdcff;
    margin-bottom: 20px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .level-badge {
    font-family: 'Press Start 2P', monospace;
    font-size: 0.7rem;
    padding: 6px 12px;
    background: #ffffff;
    color: #111b9f;
    border: 2px solid #ffffff;
  }

  .arrow {
    font-size: 1.5rem;
    color: #ffffff;
    transition: transform 0.3s ease;
  }

  .project-card:hover .arrow {
    transform: translateX(5px);
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .container {
      padding: 24px;
    }

    .portfolio-header h1 {
      font-size: 1.8rem;
    }
  }
</style>