---
interface Props {
  projet: any;
  imageUrl: string | null;
}

const { projet, imageUrl } = Astro.props;

// Sécurités si le record est vide
const titre = projet?.titre ?? 'CINÉMAGNY';
const description = (projet?.description ?? '').split('\n');
const couleurs = (projet?.couleurs ?? '').split('\n');
const typographie = (projet?.typographie ?? '').split('\n');
const credits = (projet?.credits ?? '').split('\n');
---

<main class="projects-layout">
  <!-- Projet CINÉMAGNY (top left) -->
  <article class="project-card">
    <h2>{titre}</h2>
    <p class="card-subtitle">Festival de cinéma</p>
    
    <div class="project-mockup">
      {imageUrl ? (
        <img src={imageUrl} alt={titre} />
      ) : (
        <div class="mockup-fallback">Mockup à venir</div>
      )}
    </div>
    
    <div class="project-text">
      {description.map((p: string) => p && <p>{p}</p>)}
    </div>
  </article>

  <!-- Harmonie Colorée (top right) -->
  <article class="project-card">
    <h2>Harmonie colorée</h2>
    
    <div class="color-circles">
      <div class="circle" style="background: #1a3a52;"></div>
      <div class="circle" style="background: #2d5f3f;"></div>
      <div class="circle" style="background: #4a8ba6;"></div>
      <div class="circle" style="background: #e8f4f8;"></div>
    </div>
    
    <div class="project-text">
      {couleurs.map((p: string) => p && <p>{p}</p>)}
    </div>
  </article>

  <!-- Typographie (bottom left) -->
  <article class="project-card">
    <h2>Typographie</h2>
    
    <div class="typography-display">
      <div class="font-sample">
        <span class="font-name">Righteous</span>
        <div class="font-demo righteous-font">
          <span>CINÉMAGNY</span>
        </div>
      </div>
      
      <div class="font-sample">
        <span class="font-name">Lato</span>
        <div class="font-weights">
          <span class="weight-regular">Regular</span>
          <span class="weight-bold">Extra Bold</span>
        </div>
      </div>
    </div>
    
    <div class="project-text">
      {typographie.map((p: string) => p && <p>{p}</p>)}
    </div>
  </article>

  <!-- Crédits (bottom right) -->
  <article class="project-card credits">
    <h2>Crédits</h2>
    
    <div class="project-text">
      {credits.map((p: string) => p && <p>{p}</p>)}
    </div>
    
    <div class="credits-footer">
      <div class="manolia-avatar">
        <img src="/manolia.svg" alt="Manolia" />
      </div>
      <a href={projet?.lien || '#'} target="_blank" class="cta-button">
        <span>Voir le projet</span>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path d="M5 12h14M12 5l7 7-7 7" stroke-width="2" stroke-linecap="round" />
        </svg>
      </a>
    </div>
  </article>
</main>

<style>
  .projects-layout {
    flex: 1;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    grid-auto-rows: 1fr;
    gap: 30px;
  }

  .project-card {
    background: #111b9f;
    border-radius: 0;
    padding: 26px 28px;
    color: #ffffff;
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 14px;
    box-shadow:
      0 0 0 3px #ffffff,
      6px 6px 0 0 rgba(0,0,0,0.55);
    outline: 4px solid #111b9f;
  }

  .project-card::before {
    content: "";
    position: absolute;
    inset: 10px;
    border: 3px solid #ffffff;
    pointer-events: none;
  }

  .project-card > * {
    position: relative;
    z-index: 1;
  }

  .project-card:hover {
    box-shadow:
      0 0 0 3px #ffffff,
      10px 10px 0 0 rgba(0,0,0,0.7);
    transform: translate(-2px, -2px);
    transition: all 0.18s ease-out;
  }

  .project-card h2 {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(0.9rem, 1.6vw, 1.3rem);
    color: #ffffff;
    margin: 0 0 4px 0;
    text-transform: uppercase;
    letter-spacing: 0.12em;
  }

  .card-subtitle {
    font-size: 0.7rem;
    color: #dcdcff;
    margin: 0 0 10px 0;
  }

  .project-mockup {
    margin: 8px 0 12px;
    border-radius: 4px;
    overflow: hidden;
    background: #05060f;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .project-mockup img {
    width: 100%;
    height: auto;
    display: block;
  }

  .mockup-fallback {
    padding: 40px 20px;
    font-size: 0.75rem;
    color: #ccc;
    font-family: system-ui, sans-serif;
    text-align: center;
  }

  .color-circles {
    display: flex;
    gap: 14px;
    align-items: center;
    padding: 6px 0 6px;
  }

  .circle {
    width: clamp(32px, 3.5vw, 46px);
    height: clamp(32px, 3.5vw, 46px);
    border-radius: 50%;
    border: 3px solid #ffffff;
  }

  .typography-display {
    padding-top: 4px;
    padding-bottom: 6px;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .font-sample {
    margin-bottom: 4px;
  }

  .font-name {
    font-size: 0.9rem;
    font-weight: 600;
    color: #ffffff;
    display: block;
    margin-bottom: 8px;
  }

  .font-demo {
    margin-top: 6px;
  }

  .righteous-font span {
    font-family: 'Righteous', cursive;
    font-size: clamp(1.3rem, 2.5vw, 1.8rem);
    color: #ffffff;
    letter-spacing: 0.05em;
  }

  .font-weights {
    display: flex;
    gap: 20px;
    font-size: 0.8rem;
    margin-top: 6px;
  }

  .weight-regular {
    font-weight: 400;
  }

  .weight-bold {
    font-weight: 800;
  }

  .project-text {
    font-size: 0.8rem;
    line-height: 1.5;
    color: #f5f5ff;
  }

  .project-text p {
    margin: 0 0 6px 0;
  }

  .project-text p:last-child {
    margin-bottom: 0;
  }

  .project-text strong {
    color: #ffffff;
    font-weight: 700;
  }

  .credits-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 12px;
    padding-top: 10px;
    border-top: 2px solid rgba(255,255,255,0.5);
  }

  .manolia-avatar {
    width: 58px;
    height: 58px;
    border-radius: 50%;
    overflow: hidden;
    background: #ffffff;
    border: 3px solid #522546;
  }

  .manolia-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 18px;
    background: #ffffff;
    color: #141a7b;
    border: 3px solid #ffffff;
    font-family: 'Press Start 2P', monospace;
    font-size: 0.55rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    cursor: pointer;
    text-decoration: none;
    image-rendering: pixelated;
    box-shadow: 4px 4px 0 0 #141a7b;
    transition: all 0.18s;
  }

  .cta-button:hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 0 #141a7b;
  }

  @media (max-width: 900px) {
    .projects-layout {
      grid-template-columns: 1fr;
    }

    .project-card {
      box-shadow:
        0 0 0 3px #ffffff,
        4px 4px 0 0 rgba(0,0,0,0.6);
    }
  }
</style>

<script>
  const cards = document.querySelectorAll('.project-card');
  cards.forEach((card, index) => {
    card.style.opacity = '0';
    card.style.transform = 'scale(0.95)';
    
    setTimeout(() => {
      card.style.transition = 'all 0.4s ease-out';
      card.style.opacity = '1';
      card.style.transform = 'scale(1)';
    }, 120 + (index * 120));
  });
</script>