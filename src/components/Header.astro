---
interface Props {
  currentPage?: string;
}

const { currentPage = '' } = Astro.props;
---

<header class="main-header">
  <div class="header-content">
    <!-- Avatar Manolia -->
    <a href="/" class="header-avatar">
      <img src="/manolia.svg" alt="Manolia" />
    </a>

    <!-- Navigation principale -->
    <nav class="header-nav">
      <a 
        href="/" 
        class:list={["nav-link", { active: currentPage === 'accueil' }]}
      >
        Accueil
      </a>
      <a 
        href="/portfolio" 
        class:list={["nav-link", { active: currentPage === 'portfolio' }]}
      >
        Portfolio
      </a>
      <a 
        href="/apropos" 
        class:list={["nav-link", { active: currentPage === 'apropos' }]}
      >
        À propos
      </a>
      <a 
        href="/contact" 
        class:list={["nav-link", { active: currentPage === 'contact' }]}
      >
        Contact
      </a>
    </nav>

    <!-- Social icons -->
    <div class="header-social">
      <span class="social-separator">|</span>
      <a href="https://linkedin.com" target="_blank" aria-label="LinkedIn" class="social-link">
        in
      </a>
      <a href="https://behance.net" target="_blank" aria-label="Behance" class="social-link">
        Bē
      </a>
    </div>
  </div>
</header>

<style>
  .main-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: linear-gradient(to bottom, rgba(26, 35, 126, 0.95) 0%, rgba(26, 35, 126, 0.85) 100%);
    backdrop-filter: blur(10px);
    border-bottom: 3px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .header-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px 40px;
    display: flex;
    align-items: center;
    gap: 60px;
  }

  .header-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    overflow: hidden;
    background: #ffffff;
    border: 3px solid #ffffff;
    box-shadow: 0 0 0 2px #1a237e, 4px 4px 0 0 rgba(0, 0, 0, 0.3);
    transition: all 0.3s;
    flex-shrink: 0;
  }

  .header-avatar:hover {
    transform: translate(-2px, -2px) rotate(-5deg);
    box-shadow: 0 0 0 2px #1a237e, 6px 6px 0 0 rgba(0, 0, 0, 0.4);
  }

  .header-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.3);
  }

  .header-nav {
    display: flex;
    align-items: center;
    gap: 40px;
    flex: 1;
  }

  .nav-link {
    font-family: 'Press Start 2P', monospace;
    font-size: 0.9rem;
    color: #ffffff;
    text-decoration: none;
    text-transform: capitalize;
    letter-spacing: 0.05em;
    padding: 8px 0;
    position: relative;
    transition: all 0.3s;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 3px;
    background: #ffffff;
    transition: width 0.3s;
  }

  .nav-link:hover {
    color: #ffd700;
    text-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
  }

  .nav-link:hover::after {
    width: 100%;
    background: #ffd700;
  }

  .nav-link.active {
    color: #ffd700;
  }

  .nav-link.active::after {
    width: 100%;
    background: #ffd700;
  }

  .header-social {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .social-separator {
    font-family: 'Press Start 2P', monospace;
    font-size: 1.5rem;
    color: rgba(255, 255, 255, 0.3);
  }

  .social-link {
    font-family: 'Press Start 2P', monospace;
    font-size: 0.9rem;
    color: #ffffff;
    text-decoration: none;
    padding: 8px 12px;
    border: 2px solid #ffffff;
    background: rgba(0, 0, 0, 0.2);
    transition: all 0.2s;
    box-shadow: 2px 2px 0 0 rgba(0, 0, 0, 0.3);
  }

  .social-link:hover {
    background: #ffffff;
    color: #1a237e;
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 0 rgba(0, 0, 0, 0.4);
  }

  @media (max-width: 1024px) {
    .header-content {
      gap: 30px;
      padding: 16px 30px;
    }

    .header-nav {
      gap: 25px;
    }

    .nav-link {
      font-size: 0.75rem;
    }

    .header-avatar {
      width: 50px;
      height: 50px;
    }
  }

  @media (max-width: 768px) {
    .header-content {
      flex-wrap: wrap;
      gap: 20px;
      padding: 16px 20px;
    }

    .header-nav {
      order: 3;
      width: 100%;
      justify-content: space-around;
      gap: 15px;
    }

    .nav-link {
      font-size: 0.65rem;
    }

    .header-social {
      margin-left: auto;
    }

    .social-link {
      font-size: 0.7rem;
      padding: 6px 10px;
    }
  }
</style>